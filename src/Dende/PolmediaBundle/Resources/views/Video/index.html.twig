{% extends '::admin.html.twig' %}

{% block body -%}

<table class="records_list table table-striped well" id="videosAdminList">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tytuł</th>
            <th>Czas</th>
            <th>Opis</th>
            <th style="text-align: center">Główna</th>
            <th style="text-align: center">Nagłówek</th>
            <th style="text-align: right">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_video_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.duration }}</td>
            <td>{{ entity.plot|truncate(30) }}</td>
            <td style="text-align: center">{% if entity.isFront == 1 %}<i class="icon-ok"></i>{% endif %}</td>
            <td style="text-align: center">{% if entity.isMain == 1 %}<i class="icon-ok"></i>{% endif %}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('admin_video_show', { 'id': entity.id }) }}" class="btn">pokaż</a>
                    <a href="{{ path('admin_video_edit', { 'id': entity.id }) }}" class="btn">edycja</a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('admin_video_new') }}" class="btn">
    Create a new entry
</a>
    {% endblock %}
