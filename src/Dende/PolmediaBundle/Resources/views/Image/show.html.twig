{% extends '::admin.html.twig' %}

{% block body -%}
<h1>Image</h1>

<table class="record_properties table table-striped">
    <tbody>
        <tr>
            <th>Miniatura</th>
            <td>
                <img src="/uploads/gallery/{{ entity.thumbnail }}" style="width: 200px;" />
            </td>
        </tr>
        <tr>
            <th>Zdjęcie</th>
            <td>
                <a href="/uploads/gallery/{{ entity.url }}" rel="prettyPhoto"><img src="/uploads/gallery/{{ entity.url }}" style="width: 200px;"/></a>
            </td>
        </tr>
    </tbody>
</table>

<div class="btn-group">
    <a href="{{ path('admin_image') }}" class="btn">
        Powrót do listy
    </a>

    <a href="{{ path('admin_image_edit', { 'id': entity.id }) }}" class="btn">
        Edycja
    </a>
</div>
<div class="pull-right">
{{ form(delete_form) }}
</div>
{% endblock %}
